<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE controllers SYSTEM "dtds/controllers.dtd">
<controllers>

    <!-- Coordinador: autorizar gasto -->
    <controller name="Coordinador">
        <extends controller="Typical"/>
        <action name="autorizarGasto" icon="money" class="org.example.GestionONG.actions.AutorizarGastoAction"/>
    </controller>

    <!-- Voluntario: calcular horas totales -->
    <controller name="Voluntario">
        <extends controller="Typical"/>
        <action name="calcularHorasTotales" icon="clock" class="org.example.GestionONG.actions.CalcularHorasTotalesAction"/>
    </controller>

</controllers>